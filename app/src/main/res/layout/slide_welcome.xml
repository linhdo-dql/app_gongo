<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <ImageView
            android:id="@+id/imgwel"
            android:layout_width="300dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:layout_height="300dp"
            android:src="@drawable/w1"
            android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/ttwel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgwel"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="Chia sẻ chuyến đi"/>
            <TextView
                android:id="@+id/contwel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ttwel"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="Chia sẻ chuyến đi của bạn đến những người có cùng sở thích!"/>

</RelativeLayout>