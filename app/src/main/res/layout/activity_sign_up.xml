<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SignUp"
    android:background="@drawable/a1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <TextView
                android:id="@+id/ttsignup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Đăng Ký"
                />
            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_below="@id/ttsignup">
            <LinearLayout
                android:id="@+id/container_accName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="20dp"
                android:background="@drawable/edt11">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_r"
                    android:layout_marginLeft="8dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/round_person_20"/>
                </LinearLayout>
            <EditText
                android:id="@+id/edtAccName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:hint="Tài khoản"
                android:textColor="@color/primaryColor"
                android:textColorHint="@color/blacktranparent1"
                android:background="@drawable/bgbtn2"
                android:textSize="15sp"
                android:paddingLeft="15dp"
                android:textColorHighlight="#00B8D4"
                android:gravity="center_vertical"
                />
            </LinearLayout>
                <LinearLayout
                    android:id="@+id/container_accPhone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@id/container_accName"
                    android:background="@drawable/edt11">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_r"
                        android:layout_marginLeft="8dp">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="12dp"
                            android:background="@drawable/round_phone_24"/>
                    </LinearLayout>
                    <EditText
                        android:id="@+id/edtAccMail"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:hint="Số điện thoại"
                        android:textColor="@color/primaryColor"
                        android:textColorHint="@color/blacktranparent1"
                        android:background="@drawable/bgbtn2"
                        android:textSize="15sp"
                        android:paddingLeft="15dp"
                        android:textColorHighlight="#00B8D4"
                        android:gravity="center_vertical"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/container_accPass"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@id/container_accPhone"
                    android:background="@drawable/edt11">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_r"
                        android:layout_marginLeft="8dp">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="12dp"
                            android:background="@drawable/round_vpn_key_20"/>
                    </LinearLayout>
                    <EditText
                        android:id="@+id/edtAccPass"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:hint="Mật khẩu"
                        android:textColor="@color/primaryColor"
                        android:textColorHint="@color/blacktranparent1"
                        android:background="@drawable/bgbtn2"
                        android:textSize="15sp"
                        android:paddingLeft="15dp"
                        android:textColorHighlight="#00B8D4"
                        android:gravity="center_vertical"
                        />
                </LinearLayout>
           <RelativeLayout
        android:id="@+id/container2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/container_accPass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/tv3"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Bằng việc đăng ký bạn đã đồng ý với "/>
        <LinearLayout
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv3"
            android:layout_centerHorizontal="true">
        <TextView
        android:id="@+id/tvSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#AEEA00"
        android:textStyle="bold|italic"
        android:text=" Điều khoản dịch vụ"/>

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text=" và "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#AEEA00"
            android:textStyle="bold|italic"
            android:text=" Chính sách bảo mật"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv5"
            android:layout_below="@id/tv4"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="của chúng tôi."/>

    </RelativeLayout>
    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_height="50dp"
        android:background="@drawable/bgbtn3"
        android:textSize="18sp"
        android:text="Đăng ký"
        android:layout_below="@id/container2"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:onClick="SignUp"/>
        </RelativeLayout>
        </RelativeLayout>
    <ImageButton
        android:id="@+id/imgbtnback"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/round_arrow_back_20"
        android:onClick="returntoSignIn"/>
</RelativeLayout>