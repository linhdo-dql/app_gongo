<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imgAvatarSttItem"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:riv_corner_radius="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/a4"
        android:scaleType="center"
        />
    <TextView
        android:id="@+id/uNameSttItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Linh Đỗ"
        android:layout_toRightOf="@id/imgAvatarSttItem"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15dp"
        />
    <TextView
        android:id="@+id/idSttItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="idstt"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/tvemojiNameSttItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/uNameSttItem"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        />
    <ImageView
        android:id="@+id/iconemojiSttItem"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/tvemojiNameSttItem"/>
    <TextView
        android:id="@+id/tvfrSttItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- cùng với những người khác"
        android:layout_below="@id/tvContentStt"
        android:layout_toRightOf="@id/imgAvatarSttItem"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="15dp"
        android:textSize="15dp"
        />
    <TextView
        android:id="@+id/timeSttItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3 giờ trước"
        android:layout_below="@id/uNameSttItem"
        android:layout_toRightOf="@id/imgAvatarSttItem"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/black"
        android:textSize="10dp"
        />
    <ImageView
        android:id="@+id/perSttItem"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:text="Công khai"
        android:layout_below="@id/uNameSttItem"
        android:layout_toRightOf="@id/timeSttItem"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/black"
        android:textSize="10dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvImgStt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgAvatarSttItem"
        android:layout_below="@id/timeSttItem"
        android:paddingTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/twotone_more_horiz_24"
        />
    <TextView
        android:id="@+id/tvContentStt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgAvatarSttItem"
        android:layout_below="@id/rcvImgStt"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:paddingTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>
    <TextView
        android:id="@+id/tvlocationSttItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvfrSttItem"
        android:layout_toRightOf="@id/imgAvatarSttItem"
        android:paddingTop="10dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/blue"
        android:textSize="10dp"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@id/imgAvatarSttItem"
        android:layout_below="@id/tvlocationSttItem">
        <ImageView
            android:id="@+id/imgHearth"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="@drawable/iconheart"/>
        <TextView
            android:id="@+id/tvAmountHeart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/imgHearth"
            android:textSize="15dp"
            android:text="(123)"/>
        <LinearLayout
            android:id="@+id/btnCmtHome"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/imgCmt"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/iconcmt"/>
        <TextView
            android:id="@+id/tvAmountComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_gravity="center_vertical"
            android:textSize="15dp"
            android:text="(123)"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/imgShare"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/tvAmountShare"
            android:layout_centerVertical="true"
            android:background="@drawable/iconshare"/>
        <TextView
            android:id="@+id/tvAmountShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="15dp"
            android:text="(123)"/>
    </RelativeLayout>
</RelativeLayout>