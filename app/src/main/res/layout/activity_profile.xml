<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ChildActivities.Profiles">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_b">
        <ImageButton
            android:id="@+id/backtoMain"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/round_arrow_back_ios_24"/>
    </androidx.appcompat.widget.Toolbar>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/containerPrf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleLayout"
        android:layout_marginTop="40dp"
        android:focusable="true"
        android:background="@color/white"
        android:focusableInTouchMode="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/img_cover"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                app:riv_border_width="15dp"
                app:riv_border_color="@color/white"
                app:riv_corner_radius="20dp"
                android:src="@drawable/a4"
                android:scaleType="center"/>
            <RelativeLayout
                android:id="@+id/containerContentPRF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="230dp"
                android:background="@color/white">
               <RelativeLayout
                   android:id="@+id/containerbtn"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <Button
                       android:id="@+id/btnaddStrPrf"
                       android:layout_width="200dp"
                       android:layout_height="50dp"
                       android:layout_marginTop="150dp"
                       android:layout_alignParentLeft="true"
                       android:background="@drawable/bgbtn"
                       android:layout_toLeftOf="@id/btnMore"
                       android:text="Thêm tin của bạn"
                       android:layout_marginLeft="15dp"
                       android:textStyle="bold"
                       android:textColor="@color/white"
                       android:textAllCaps="false"
                       android:textSize="15dp"/>
                   <LinearLayout
                       android:id="@+id/btnMore"
                       android:layout_width="50dp"
                       android:layout_height="50dp"
                       android:layout_alignParentRight="true"
                       android:layout_marginRight="15dp"
                       android:layout_marginTop="150dp"
                       android:background="@drawable/bg_btnmore"
                       android:layout_marginLeft="10dp"
                       android:gravity="center">
                   <Button
                       android:layout_width="40dp"
                       android:layout_height="40dp"
                       android:background="@drawable/outline_expand_more_24"
                      />
                   </LinearLayout>
               </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/containerbtn1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="invisible">
                    <Button
                        android:id="@+id/btnaddFr"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginTop="150dp"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/bgbtn"
                        android:layout_toLeftOf="@id/btnChat"
                        android:text="Gửi yêu cầu kết bạn"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:textSize="15dp"/>
                    <LinearLayout
                        android:id="@+id/btnChat"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="150dp"
                        android:layout_toLeftOf="@id/btnMore2"
                        android:background="@drawable/bg_btnmore"
                        android:layout_marginLeft="10dp"
                        android:gravity="center">
                        <Button
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/chatbtn"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/btnMore2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="150dp"
                        android:background="@drawable/bg_btnmore"
                        android:layout_marginLeft="10dp"
                        android:gravity="center">
                        <Button
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/outline_expand_more_24"
                            />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/containerContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_t"
                    android:layout_marginTop="210dp">
                    <ImageView
                        android:id="@+id/pra1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/round_business_center_20" />

                    <TextView
                        android:id="@+id/tvp1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@id/pra1"
                        android:text="Đang làm việc tại "
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <TextView
                    android:id="@+id/tvJobPrf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/tvp1"
                    android:text="HOU_Hà Nội "
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                    <ImageView
                        android:id="@+id/pra2"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_below="@id/pra1"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/round_school_20" />

                    <TextView
                        android:id="@+id/tvp2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pra1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/pra2"
                        android:text="Từng học tại "
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/tvSchoolPrf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/tvp1"
                        android:layout_toRightOf="@id/tvp2"
                        android:text="HOU"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <ImageView
                        android:id="@+id/pra3"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_below="@id/pra2"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/round_house_20" />

                    <TextView
                        android:id="@+id/tvp3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pra2"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/pra3"
                        android:text="Sống tại "
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/tvAddressPrf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/tvp2"
                        android:layout_toRightOf="@id/tvp3"
                        android:text="Hà Nội"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <ImageView
                        android:id="@+id/pra4"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_below="@id/pra3"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/baseline_room_242" />

                    <TextView
                        android:id="@+id/tvp4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pra3"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/pra4"
                        android:text="Đến từ "
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <ImageView
                        android:id="@+id/pra5"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_below="@id/pra4"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/round_cake_24" />

                    <TextView
                        android:id="@+id/tvCountryPrf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/tvp3"
                        android:layout_toRightOf="@id/tvp4"
                        android:text="Bắc Ninh"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/tvBirthPrf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pra4"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/pra5"
                        android:text="26-09-1999"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <ImageView
                        android:id="@+id/pra6"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_below="@id/pra5"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/round_favorite_20" />

                    <TextView
                        android:id="@+id/tvRelationPrf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pra5"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/pra6"
                        android:text="Độc thân"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <LinearLayout
                        android:id="@+id/btnEditprf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/pra6"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:onClick="editPrf">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/round_edit_20" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chỉnh sửa thông tin của bạn"
                            android:textColor="@color/primaryColor"
                            android:textStyle="normal" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/containerSttPrf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/bg_t"
                    android:layout_below="@id/containerContent">
                    <TextView
                        android:id="@+id/tt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:text="BÀI VIẾT GẦN ĐÂY"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:textStyle="bold"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcv_sttPrf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tt2"
                        android:layout_marginTop="15dp"/>
                </RelativeLayout>
            </RelativeLayout>
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/img_avatar"
                android:layout_width="165dp"
                android:layout_height="165dp"
                android:src="@drawable/a1"
                android:scaleType="centerCrop"
                app:riv_corner_radius="165dp"
                app:riv_border_color="@color/white"
                app:riv_border_width="5dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="140dp"/>
            <TextView
                android:id="@+id/tvUsernamePrf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Linh Đỗ"
                android:layout_below="@id/img_avatar"
                android:textSize="25dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
    <include layout="@layout/dia_edit_prf"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>