<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    android:id="@+id/layout_cmt"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_dialog_prf">
    <TextView
        android:id="@+id/ttdiacmt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:text="Bình Luận"
        android:paddingBottom="10dp"
        android:background="@drawable/bg_b"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:isScrollContainer="false"
        android:layout_below="@id/ttdiacmt">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/icondiacmt1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/iconheart"/>
    <TextView
        android:id="@+id/tv6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(1)"
        android:layout_toRightOf="@id/icondiacmt1"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toRightOf="@id/tv6"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/outline_expand_more_24"
        />
    <ImageView
        android:id="@+id/icon7"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/iconshare"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@id/icondiacmt1"/>
        </RelativeLayout>
    </ScrollView>
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarapp2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:layout_alignParentBottom="true"
            android:fitsSystemWindows="true"
            android:gravity="fill">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:gravity="center">
                    <ImageButton
                        android:id="@+id/btnPickImage"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/baseline_photo_library_24"
                        android:layout_marginLeft="10dp"
                        android:onClick="pickImage"/>
                    <ImageButton
                        android:id="@+id/btnCheckin"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/baseline_room"
                        android:layout_marginLeft="50dp"/>
                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/baseline_loyalty_24"
                        android:layout_marginLeft="50dp"/>
                    <ImageButton
                        android:id="@+id/imgbtnEmoji"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ah3"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="10dp"/>
                </LinearLayout>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/toolbarapp2">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/avatarHomeCmt"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:riv_corner_radius="40dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/a2"
                    android:scaleType="center"
                    />
                <EditText
                    android:id="@+id/edtCmtDetail"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:textAllCaps="false"
                    android:layout_toLeftOf="@id/btnsendCmtSttDetail"
                    android:layout_toRightOf="@id/avatarHomeCmt"
                    android:paddingLeft="20dp"
                    android:textStyle="normal"
                    android:textColorHint="@color/blacktranparent"
                    android:hint="Viết bình luận của bạn..."
                    android:textSize="15dp"
                    android:textColor="@color/blacktranparent"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/edt2"/>
                <ImageButton
                    android:id="@+id/btnsendCmtSttDetail"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/round_send_24"/>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
</RelativeLayout>